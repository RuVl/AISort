<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:view="clr-namespace:Client.Views">
    <!-- Body Grid style -->
    <Style x:Key="BodyGrid" TargetType="Grid">
        <Style.Resources>
            <Style TargetType="view:MenuView">
                <Setter Property="Margin" Value="10 0"/>
            </Style>
            <Style TargetType="view:ToolbarView">
                <Setter Property="Margin" Value="10 0"/>
            </Style>
            <Style TargetType="view:FileView">
                <Setter Property="Margin" Value="10 0 0 0"/>
            </Style>
            <Style TargetType="view:ControlPanelView">
                <Setter Property="Margin" Value="0 0 10 0"/>
            </Style>
            <Style TargetType="view:PreviewPanelView">
                <Setter Property="Margin" Value="10 0"/>
            </Style>
        </Style.Resources>
    </Style>

    <!-- Toolbar style -->
    <Style x:Key="ToolbarBorder" TargetType="Border">
        <Setter Property="BorderBrush" Value="Gray"/>
        <Setter Property="BorderThickness" Value="0 1"/>
        <Setter Property="Margin" Value="0 0 0 7"/>
    </Style>
</ResourceDictionary>